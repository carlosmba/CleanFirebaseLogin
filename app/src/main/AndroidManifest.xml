<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendozasolutions.cleanarchitectureloginfirebase">

    <application
        android:name=".CleanFirebaseLoginApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanArchitectureLoginFirebase">
        <activity android:name=".presentation.auth.passwordrecover.view.PasswordRecoverActivity"
            android:parentActivityName=".presentation.auth.login.view.LoginActivity"/>
        <activity android:name=".presentation.auth.register.view.RegisterActivity"
            android:parentActivityName=".presentation.auth.login.view.LoginActivity"/>


        <activity android:name=".presentation.auth.login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.main.view.MainActivity" />
    </application>

</manifest>